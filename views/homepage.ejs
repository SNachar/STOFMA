<md-sidenav class="site-sidenav md-sidenav-left md-whiteframe-z3"
            md-component-id="left"
            md-is-locked-open="$mdMedia('gt-sm')">

    <md-toolbar class="md-hue-2">
        <img ng-src="" alt="Avatar"/>

        <span>Lorem Ipsum</span>
        <md-menu layout-align="center center" layout="column">
            <md-button aria-label="Account menu" class="md-icon-button" ng-click="$mdOpenMenu()">
                <md-icon md-menu-origin class="material-icons">settings</md-icon>
            </md-button>
            <md-menu-content width="3">
                <md-menu-item>
                    <md-button>
                        <md-icon md-menu-align-target class="material-icons">settings</md-icon> <p>Paramètres</p>
                    </md-button>
                </md-menu-item>
                <md-menu-divider></md-menu-divider>
                <md-menu-item>
                    <md-button>
                        <md-icon class="material-icons">power_settings_new</md-icon> <p>Déconnexion</p>
                    </md-button>
                </md-menu-item>
            </md-menu-content>
        </md-menu>
    </md-toolbar>

    <md-list>
        <md-list-item>
            <md-button ui-sref-active="active" ui-sref="home">
                <md-icon class="material-icons">home</md-icon>
                Accueil
            </md-button>
        </md-list-item>

        <md-list-item>
            <md-button ui-sref-active="active" ui-sref="sell">
                <md-icon class="material-icons">local_grocery_store</md-icon>
                Vendre
            </md-button>
        </md-list-item>

        <md-list-item>
            <md-button ui-sref-active="active" ui-sref="sales">
                <md-icon class="material-icons">layers</md-icon>
                Ventes
            </md-button>
        </md-list-item>

        <md-list-item>
            <md-button ui-sref-active="active" ui-sref="purchases">
                <md-icon class="material-icons">toc</md-icon>
                Achats
            </md-button>
        </md-list-item>
    </md-list>

</md-sidenav>

<div flex layout="column" tabIndex="-1" role="main" class="md-whiteframe-z2">

    <md-toolbar layout="row" class="md-whiteframe-z2 md-toolbar-tools">
        <md-button class="md-icon-button" hide-gt-sm ng-click="main.toggleMenu()" aria-label="Afficher le menu">
            <md-icon class="material-icons">menu</md-icon>
        </md-button>
        <h2 ng-bind="pageTitle"></h2>
    </md-toolbar>

    <md-content layout-padding>
        <div class="stofma-content" ui-view="main-content"></div>
    </md-content>

</div>